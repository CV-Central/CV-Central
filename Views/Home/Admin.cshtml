@{
    ViewData["Title"] = "Admin | CV Central";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/home.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="shortcut icon" href="~/img/favicon.svg" type="image/x-icon">
    <title>Admin | CV Central</title>
</head>
<body>
    <main>
        <h2>Bienvenido Admin</h2>

        <div class="menu">
            <div class="menu-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48"><defs><mask id="IconifyId190d7c47d723fba0"><g fill="none" stroke-linecap="round" stroke-width="4"><path stroke="#fff" stroke-linejoin="round" d="M8 15V6a2 2 0 0 1 2-2h28a2 2 0 0 1 2 2v36a2 2 0 0 1-2 2H10a2 2 0 0 1-2-2v-9"/><path stroke="#fff" d="M31 15h3m-6 8h6m-6 8h6"/><path fill="#fff" stroke="#fff" stroke-linejoin="round" d="M4 15h18v18H4z"/><path stroke="#000" stroke-linejoin="round" d="m10 21l6 6m0-6l-6 6"/></g></mask></defs><path fill="#ffffff" d="M0 0h48v48H0z" mask="url(#IconifyId190d7c47d723fba0)"/></svg>
                <p>Exportar a Excel</p>
            </div>
        </div>
    </main>

    <div class="container-fluid">
    <h3>Usuarios</h3>

    <table class="table table-dark table-striped table-hover mt-2">
        <tr>
            <td>ID</td>
            <td>Nombres</td>
            <td>Edad</td>
            <td>Correo</td>
            <td>Celular</td>
            <td>Direcci√≥n</td>
            <td>Acciones</td>
        </tr>

        @foreach (var user in Model) {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Age</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Address</td>
                <td>
                    @* <a class="btn btn-sm btn-warning" asp-area="" asp-controller="Users" asp-action="Edit">Editar</a> *@
                    <a class="btn btn-sm btn-danger" asp-area="" asp-controller="Users" asp-action="Delete">Eliminar</a>
                </td>
            </tr>
        }
    </table>
</div>
</body>
</html>