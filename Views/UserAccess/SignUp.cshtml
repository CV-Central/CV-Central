@model User;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/signup.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="shortcut icon" href="~/css/Login/favicon.svg" type="image/x-icon">
    <title>Sign up | CV Central</title>
</head>
<body>
    <main>
        <div class="left">
            <form class="left-content" asp-controller="UserAccess" asp-action="SignUp" method="post">
                <div class="left-title">
                    <img src="~/img/favicon.svg" alt="Logo">
                    <h4>Sign up to CVCentral</h4>
                </div>
    
                <div class="login-google">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="#333335" d="M11.956 10.356v3.451h4.792c-.446 2.193-2.313 3.453-4.792 3.453a5.28 5.28 0 0 1 0-10.559a5.166 5.166 0 0 1 3.29 1.178l2.6-2.6a8.93 8.93 0 1 0-5.89 15.635c4.467 0 8.529-3.249 8.529-8.934a7.468 7.468 0 0 0-.2-1.625l-8.329.001Z"/></svg>
                    <p>Google</p>
                </div>
    
                <hr class="divider">

                <div class="inputs">
                    <div class="inputs-left">
                        <div class="input-item">
                            <input type="text" placeholder="Username" autofocus asp-for="Name" required>
                        </div>
        
                        <div class="input-item">
                            <input type="email" placeholder="Email" asp-for="Email" required>
                        </div>
        
                        <div class="input-item">
                            <input type="password" placeholder="Password" asp-for="Password" required>
                        </div>
                    </div>

                    <div class="inputs-right">
                        <div class="input-item">
                            <input type="number" placeholder="Age" autofocus asp-for="Age" required>
                        </div>

                        <div class="input-item">
                            <input type="number" placeholder="Phone" autofocus asp-for="Phone">
                        </div>

                        <div class="input-item">
                            <input type="text" placeholder="Address" autofocus asp-for="Address" required>
                        </div>
                    </div>
                </div>

                <button class="login-btn">Sign Up</button>
            </form>

            <div class="links">
                <span>¿Ya tienes cuenta? <a asp-controller="UserAccess" asp-action="Login">Inicia Sesión</a></span>
            </div>
        </div>

        <div class="right">
            <img src="~/img/RegisterIlustration.svg" alt="Login Ilustration">
        </div>
    </main>

    <footer>
        <a href="https://github.com/CV-Central/CV-Central" target="_blank">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 16 16"><path fill="#575757" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59c.4.07.55-.17.55-.38c0-.19-.01-.82-.01-1.49c-2.01.37-2.53-.49-2.69-.94c-.09-.23-.48-.94-.82-1.13c-.28-.15-.68-.52-.01-.53c.63-.01 1.08.58 1.23.82c.72 1.21 1.87.87 2.33.66c.07-.52.28-.87.51-1.07c-1.78-.2-3.64-.89-3.64-3.95c0-.87.31-1.59.82-2.15c-.08-.2-.36-1.02.08-2.12c0 0 .67-.21 2.2.82c.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82c.44 1.1.16 1.92.08 2.12c.51.56.82 1.27.82 2.15c0 3.07-1.87 3.75-3.65 3.95c.29.25.54.73.54 1.48c0 1.07-.01 1.93-.01 2.2c0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"/></svg>
        </a>
    </footer>
</body>
</html>