@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="shortcut icon" href="favicon.svg" type="image/x-icon">
    <title>Password Recovery | CV Central</title>
</head>
<body>
    <main>
        <div class="left">
            <form class="left-content" asp-action="Recovery" method="post">
                <div class="left-title">
                    <img src="~/img/favicon.svg" alt="Logo">
                    <h4>Password Recovery</h4>
                </div>
                
                <p>Ingresa el correo con el que te registraste</p>
                
                <div class="input-item">
                    <input type="email" placeholder="Email" autofocus id="Email" name="email">
                </div>

                <button class="login-btn">Recuperar Contrase√±a</button>
            </form>

            <div class="links">
                <a asp-controller="UserAccess" asp-action="Login">Volver</a>
            </div>
        </div>

        <div class="right">
            <img src="~/img/ForgotPassword.svg" alt="Login Ilustration">
        </div>
    </main>
</body>
</html>